{
  "name": "crypto-api-wrapper",
  "version": "0.5.0",
  "description": "## Web Crypto wrapper",
  "main": "dist/commonjs/src/index.node.js",
  "module": "dist/esm/src/index.node.js",
  "browser": "dist/esm/src/index.browser.js",
  "types": "dist/esm/src/index.node.d.ts",
  "files": [
    "dist/"
  ],
  "dependencies": {
    "@types/bn.js": "^4.11.1",
    "bn.js": "^4.11.8",
    "core-js": "^2.5.7"
  },
  "peerDependencies": {
    "node-webcrypto-ossl": "^1.0.36"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.8",
    "@types/node": "^8.10.21",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.14.3",
    "jasmine": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^2.0.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-jasmine": "^1.1.2",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^3.0.12",
    "lint-staged": "^7.2.0",
    "markdownlint-cli": "^0.8.2",
    "prettier": "^1.13.7",
    "standard-changelog": "^1.0.19",
    "text-encoding": "^0.6.4",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.2"
  },
  "scripts": {
    "doc": "typedoc --theme minimal --out docs/ src/ && touch docs/.nojekyll",
    "build": "rm -rf dist && tsc --outDir dist/commonjs -m commonjs && tsc --outDir dist/esm -m ES2015",
    "test": "karma start",
    "test-node": "npm run build && jasmine --config=jasmine.json",
    "lint": "tslint --fix -p tsconfig.json && prettier --write --list-different src/**/*.ts test/**/*.{ts,config.js} ./*.{ts,js,json,md} docs/**/*.md && markdownlint ./*.md",
    "precommit": "lint-staged && npm test -- --single-run --no-auto-watch",
    "publ": "npm run build && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coast-team/crypto-api-wrapper.git"
  },
  "keywords": [
    "webcrypto",
    "wrapper"
  ],
  "contributors": [
    "Jean-Philippe Eisenbarth",
    "Philippe Kalitine <philippe.kalitine@gmail.com> (http://philippe.kalitine.name/)"
  ],
  "license": "Apache 2",
  "bugs": {
    "url": "https://github.com/coast-team/crypto-api-wrapper/issues"
  },
  "homepage": "https://github.com/coast-team/crypto-api-wrapper#readme",
  "lint-staged": {
    "linters": {
      "*.md": [
        "prettier --write --list-different",
        "git add",
        "markdownlint"
      ],
      "*.ts": [
        "tslint --fix -p tsconfig.json",
        "git add"
      ],
      "*.{ts,json,scss,css}": [
        "prettier --write --list-different",
        "git add"
      ]
    },
    "concurrent": false
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
