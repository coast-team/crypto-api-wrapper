{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "downlevelIteration": true,
    "types": ["bn.js", "jasmine", "node"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "test/**/*", "node_modules/@types/bn.js/index.d.ts"]
}
